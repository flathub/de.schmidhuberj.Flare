{
    "app-id": "de.schmidhuberj.Flare",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "flare-wrapper.sh",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.portal.FileChooser"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/flare/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "flare",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "tar-xz",
                    "url": "https://gitlab.com/Schmiddiii/flare/-/package_files/55506655/download",
                    "sha256": "f2b0f4801caf2ff7bb29b1318e299fb031796d6e684285ff8802898e759fd27c"
                }
            ]
        },
        {
            "name": "flare-wrapper",
            "buildsystem": "simple",
            "build-commands": [
                "install -D flare-wrapper.sh /app/bin/flare-wrapper.sh"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "flare-wrapper.sh"
                }
            ]
        }
    ]
}
