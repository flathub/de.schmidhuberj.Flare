{
    "app-id": "de.schmidhuberj.Flare",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "flare",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.portal.FileChooser"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/flare/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "flare",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "tar-xz",
                    "url": "https://gitlab.com/Schmiddiii/flare/-/package_files/49365654/download",
                    "sha256": "a3a128fc6a045dc266e0f6537371babe14645f5aa25fd5c416ee049d1ffc0e71"
                }
            ]
        }
    ]
}
